<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/quoteTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="8pt"
        android:textColor="@color/colorPrimary"
        android:text="Insert fetched quote here"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getRandomQuoteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get new quote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quoteTV"
        />

    <Button
        android:id="@+id/emailQuoteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email this quote"
        app:layout_constraintTop_toBottomOf="@+id/getRandomQuoteBtn"
        />


</androidx.constraintlayout.widget.ConstraintLayout>